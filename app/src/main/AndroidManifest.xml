<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlin.fragmentsandbox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Lifecycle.LifecycleActivity"
            android:label="@string/title_activity_lifecycle_fragment"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Dynamic.DynamicFragmentActivity"
            android:label="@string/title_activity_dynamic_fragment"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Static.StaticFragmentActivity"
            android:label="@string/title_activity_static_fragment"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>