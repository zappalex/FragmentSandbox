<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:orientation="vertical">

    <Button
        android:id="@+id/static_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textColor="@android:color/white"
        android:background="#AED581"
        android:text="Static Fragment"/>

    <Button
        android:id="@+id/dynamic_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textColor="@android:color/white"
        android:background="#9CCC65"
        android:text="Dynamic Fragment"/>

    <Button
        android:id="@+id/lifecycle_fragment_btn"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textColor="@android:color/white"
        android:background="#8BC34A"
        android:text="Lifecycle Fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textColor="@android:color/white"
        android:background="#7CB342"
        android:text="Placeholder 4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textColor="@android:color/white"
        android:background="#689F38"
        android:text="Placeholder 5"/>


</LinearLayout>